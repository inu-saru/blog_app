<h2><%= post.title %></h2>
<p><%= image_tag post.picture.url if post.picture? %></p>
<p><%= post.content %></p>
<p class="continue"><%= link_to 'Show', post %></p>
<hr />
<p class="user_info">
  <span class="user">Contributor: <%= link_to 'post.user.name', post.user %></span>
  <span class="timestamp">Posted <%= time_ago_in_words(post.created_at) %> ago.</span>
</p>
<% if current_user %>
  <% if ( current_user?(post.user) || current_user.admin? ) %>
    <div class="edit">
      <span><%= link_to 'Edit', edit_post_path(post) %></span>
      <span><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    </div>
  <% end %>
<% end %>